<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/game_master_title"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnJour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setDay"
            android:text="@string/jour" />

        <Button
            android:id="@+id/btnNuit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setNuit"
            android:text="@string/nuit" />

    </LinearLayout>

    <Button
        android:id="@+id/btnVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:width="175dp"
        android:onClick="startVoteVillage"
        android:text="@string/vote_du_village" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnLoup"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="tourLoup"
            android:text="@string/loup_garou" />

        <Button
            android:id="@+id/btnVoyante"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="tourVoyante"
            android:text="@string/voyante" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnVoleur"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="tourVoleur"
            android:text="@string/voleur" />

        <Button
            android:id="@+id/btnCupidon"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/cupidon"
            android:onClick="tourCupidon"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSorciere"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="tourSorciere"
            android:text="@string/sorciere" />
        <Button
            android:id="@+id/btnTest"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="sendTest"
            android:text="Test" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="Deroulement de la partie :"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/logTxtView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:background="#595959"
        android:fadeScrollbars="false"
        android:gravity="bottom"
        android:lines="10"
        android:maxLines="10"
        android:padding="2dp"
        android:scrollbars="vertical"
        android:textColor="#ffffff" />

</LinearLayout>